{
  "data": {"url": "data/gapminder.json"},
  "transform": {"filter": "datum.cluster == 3"},
  "layers": [
    {
      "mark": "bar",
      "encoding": {
        "x": {"field": "country","type": "nominal"},
        "y": {
          "field": "life_expect",
          "type": "quantitative",
          "aggregate": "mean"
        }
      }
    },
    {
      "mark": "rule",
      "encoding": {
        "x": {"field": "country","type": "nominal"},
        "y": {
          "field": "life_expect",
          "type": "quantitative",
          "aggregate": "min",
          "title": "Life Expectency"
        },
        "y2": {
          "field": "life_expect",
          "type": "quantitative",
          "aggregate": "max"
        },
        "color" : {"value" : "#000" }
      }
    },
    {
      "mark": "tick",
      "encoding": {
        "x": {"field": "country","type": "nominal"},
        "y": {
          "field": "life_expect",
          "type": "quantitative",
          "aggregate": "min"
        },
        "color" : {"value" : "#000" }
      }
    },
    {
      "mark": "tick",
      "encoding": {
        "x": {"field": "country","type": "nominal"},
        "y": {
          "field": "life_expect",
          "type": "quantitative",
          "aggregate": "max"
        },
        "color" : {"value" : "#000" }
      }
    }
  ]
}